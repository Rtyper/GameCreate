<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.marc.gamecreate"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo" >
        <activity
            android:name="com.marc.gamecreate.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.marc.gamecreate.PlayActivity"
            android:label="@string/title_activity_play" >
        </activity>
        <activity
            android:name="com.marc.gamecreate.CreateActivity"
            android:label="@string/title_activity_create" >
        </activity>
        <activity
            android:name="com.marc.gamecreate.EditActivity"
            android:label="@string/title_activity_edit" >
        </activity>
    </application>

</manifest>